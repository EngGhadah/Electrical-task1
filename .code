#include <Servo.h>

Servo servo[6];  // Array to store the servos

// Define the pin numbers for the servos
const int servoPins[6] = {2, 3, 4, 5, 6, 7};

// Define the angles for each step (Example values)
int stepAngles[4][6] = {
  {45, 90, 135, 45, 90, 135},  // Step 1
  {90, 45, 90, 135, 45, 90},  // Step 2
  {135, 90, 45, 135, 90, 45}, // Step 3
  {90, 135, 90, 45, 135, 90}  // Step 4
};

void setup() {
  // Attach the servos to the pins
  for (int i = 0; i < 6; i++) {
    servo[i].attach(servoPins[i]);
  }
  
  // Initialize the servos to the starting position
  initializeServos();
}

void loop() {
  // Execute the walking steps in a loop
  for (int step = 0; step < 4; step++) {
    executeStep(step);
    delay(500); // Delay to allow servos to move to the new positions
  }
}

// Function to initialize the servos to the starting position
void initializeServos() {
  for (int i = 0; i < 6; i++) {
    servo[i].write(90); // Set all servos to the initial position (90 degrees)
  }
  delay(1000); // Wait for a second
}
